
@{
    ViewData["Title"] = "Student Profile";
}

<div class="container">
    <h4>Student Profile Form</h4>
    <form method="post">
        <div class="row">
            <div class="col-sm-4">
                <label for="name">Name</label>
            </div>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Student.Name" />
            </div>
        </div>

        <!-- ... Other form elements ... -->

        <div class="row">
            <div class="col-sm-4">
                <label for="photo">Photo</label>
            </div>
            <div class="col-sm-8">
                <input type="file" class="form-control" asp-for="Student.Photo" />
            </div>
        </div>

        <!-- ... Rest of your form ... -->

        <div class="row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-sm-12">
            @Explanation("Rainbox School is one of the best schools in the world and will continue to be so.")
        </div>
    </div>
</div>

@helper Explanation(string text)
{
    <p style="border: 1px solid black; padding: 5px; margin-top: 5px;">
        @text
    </p>
}
